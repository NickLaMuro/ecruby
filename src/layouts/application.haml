!!!
%html
  %head
    %title ECRuby - The Chippewa Valley Ruby Users Group (ECRuby)
    = stylesheets "reset", "960", "text", "stickyfooter", "style"
  %body
    #page
      #headerwrap
        #header.container_12
          .grid_12
            =img "ecrubylogo.png"
          .clear
    
      #navwrap.container_12
        #navbar.grid_12
          = menubar(["Home", "/"], "Meetings", "Resources", "Jobs", ['Get Ruby', 'http://www.ruby-lang.org/en/downloads/'], :selected => { :class => 'current', :item => :a })
        .clear
      #contentwrap
        
        #content.container_12
          = yield

    #footerwrap.container_12
      #footer.grid_12
        %p &copy; 2009 ecruby.org
    
    %script{ :type => "text/javascript", :src => "http://twitter.com/javascripts/blogger.js" }
    %script{ :type => "text/javascript", :src => "http://twitter.com/statuses/user_timeline/ecruby.json?callback=twitterCallback2&amp;count=5" }
